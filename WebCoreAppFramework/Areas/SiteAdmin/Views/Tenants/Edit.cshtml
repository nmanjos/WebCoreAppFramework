@model WebCoreAppFramework.ViewModels.TenantViewModel

@{
    ViewData["Title"] = "Edit";
}

    <h4>Edit - Tenant: @Model.Name</h4>


<hr />


<form asp-action="Edit">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

    </div>
    <div class="form-group">

        <input type="hidden" asp-for="Name" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="LogoURL" class="control-label"></label>

        <input asp-for="LogoURL" class="form-control" />
        <span asp-validation-for="LogoURL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmailAddress" class="control-label"></label>

        <input asp-for="EmailAddress" class="form-control" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WebSite" class="control-label"></label>

        <input asp-for="WebSite" class="form-control" />
        <span asp-validation-for="WebSite" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneContact" class="control-label"></label>
        <input asp-for="PhoneContact" class="form-control" />
        <span asp-validation-for="PhoneContact" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Visible" /> @Html.DisplayNameFor(model => model.Visible)
        </label>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="System" /> @Html.DisplayNameFor(model => model.System)
        </label>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

