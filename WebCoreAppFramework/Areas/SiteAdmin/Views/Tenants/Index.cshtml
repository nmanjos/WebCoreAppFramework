@model IEnumerable<WebCoreAppFramework.Models.ApplicationTenant>

@{
    ViewData["Title"] = "Tenants";
}

    <h1>Tenants</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebSite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.System)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebSite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneContact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.System)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"class="btn btn-info fas fa-edit" role="button"></a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary fas fa-info-circle" role="button"></a>
                @if (!item.System)
                {
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger fas fa-trash-alt" role="button"></a>
                }

            </td>
        </tr>
}
    </tbody>
</table>
